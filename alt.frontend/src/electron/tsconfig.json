{
  "compilerOptions": {
    // require strict types (null-safety)
    "strict": true,
    // tell typescript to generate ESM syntax
    "target": "ESNext",
    // tell typescript to require ESM syntax as input {including .js file imports}
    "module": "NodeNext",
    // define where to put generated JS files
    "outDir": "../../dist-electron",
    // ignore errors from dependencies
    "skipLibCheck": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "strictPropertyInitialization": false,

    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "types": ["../contracts/types"]
  }
}
